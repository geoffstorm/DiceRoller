<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        tools:context=".ui.home.HomeFragment">

        <TextView
            android:id="@+id/tv_die_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/label_die_count"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:labelFor="@id/ed_die_count"/>

        <TextView
            android:id="@+id/tv_side_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_die_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/label_side_count"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:labelFor="@id/ed_side_count"/>

        <TextView
            android:id="@+id/tv_constant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_side_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/label_add_constant"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:labelFor="@id/ed_constant"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="tv_constant,tv_die_count,tv_side_count"/>

        <EditText
            android:id="@+id/ed_die_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_die_count"
            android:layout_marginStart="@dimen/spacing_medium"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:maxLength="3"
            android:importantForAutofill="no"/>

        <!-- TODO this should be an auto complete text view -->
        <EditText
            android:id="@+id/ed_side_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_side_count"
            android:layout_marginStart="@dimen/spacing_medium"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:maxLength="3"
            android:importantForAutofill="no"/>

        <EditText
            android:id="@+id/ed_constant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_constant"
            android:layout_marginStart="@dimen/spacing_medium"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:maxLength="3"
            android:importantForAutofill="no"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>