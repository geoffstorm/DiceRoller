<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.gstormdev.diceroller.ui.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        tools:context=".ui.home.HomeFragment">
        
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.05"
            android:text="@{viewmodel.diceNotation}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
            tools:text="10d6"/>

        <TextView
            android:id="@+id/tv_die_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintBottom_toTopOf="@id/tv_side_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.5"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.15"
            android:text="@string/label_die_count"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:labelFor="@id/ed_die_count"/>

        <TextView
            android:id="@+id/tv_side_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_die_count"
            app:layout_constraintBottom_toTopOf="@id/tv_constant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/label_side_count"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:labelFor="@id/ed_side_count"/>

        <TextView
            android:id="@+id/tv_constant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginEnd="@dimen/spacing_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_side_count"
            app:layout_constraintBottom_toTopOf="@id/btn_roll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_max="wrap"
            app:layout_constraintWidth_percent="0.5"
            android:text="@string/label_add_constant"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:labelFor="@id/ed_constant"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="tv_constant,tv_die_count,tv_side_count"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_die_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_die_count"
            android:layout_marginStart="@dimen/spacing_medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_die_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:maxLength="3"
                android:selectAllOnFocus="true"
                android:text="@={`` + viewmodel.numberOfDice}"
                tools:text="10"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_side_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_side_count"
            android:layout_marginStart="@dimen/spacing_medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_side_count"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:maxLength="3"
                android:selectAllOnFocus="true"
                android:text="@={`` + viewmodel.numberOfSides}"
                tools:text="6"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_constant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/barrier"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_constant"
            android:layout_marginStart="@dimen/spacing_medium">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_constant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                android:textAlignment="center"
                android:maxLength="3"
                android:selectAllOnFocus="true"
                android:text="@={`` + viewmodel.constant}"
                tools:text="0"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_roll_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/til_constant"
            app:layout_constraintBottom_toTopOf="@id/tv_roll_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginBottom="@dimen/spacing_large"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:text="@{@string/roll_total(viewmodel.result.result)}"
            app:hideIfZero="@{viewmodel.result.result}"
            tools:text="Total: 17"/>

        <TextView
            android:id="@+id/tv_roll_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@id/tv_roll_total"
            app:layout_constraintBottom_toTopOf="@id/btn_roll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="@dimen/spacing_large"
            android:paddingStart="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_large"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:scrollbars="vertical"
            android:gravity="center_vertical"
            android:text="@{viewmodel.result.rolls}"
            app:hideIfNull="@{viewmodel.result.rolls}"
            tools:text="(1, 2, 3, 4, 5, 6)"/>

        <Button
            android:id="@+id/btn_roll"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@string/button_roll_dice"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>